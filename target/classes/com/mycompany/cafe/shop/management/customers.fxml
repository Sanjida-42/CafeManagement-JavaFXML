<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.mycompany.cafe.shop.management.CustomersController"
            prefWidth="650" prefHeight="600">

    <VBox spacing="12" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10"
          AnchorPane.topAnchor="10" AnchorPane.bottomAnchor="10">
        <Label text="Customers" style="-fx-font-size:30px;" />
        <TableView fx:id="customerTableView" prefHeight="500">
            <columns>
                <TableColumn fx:id="customerNameCol" text="Name" prefWidth="170"/>
                <TableColumn fx:id="customerEmailCol" text="Email" prefWidth="200"/>
                <TableColumn fx:id="orderCountCol" text="Orders" prefWidth="80"/>
                <TableColumn fx:id="totalSpentCol" text="Total Spent" prefWidth="130"/>
            </columns>
        </TableView>
    </VBox>
</AnchorPane>