<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.mycompany.cafe.shop.management.SignupController"
            prefWidth="400" prefHeight="350">

    <children>
        <VBox alignment="CENTER" spacing="15" layoutX="50" layoutY="50" prefWidth="300">
            <Label text="Sign Up" style="-fx-font-size: 24px;"/>
            <TextField fx:id="nameField" promptText="Full Name" style="-fx-font-size: 16px;"/>
            <TextField fx:id="emailField" promptText="Email" style="-fx-font-size: 16px;"/>
            <PasswordField fx:id="passwordField" promptText="Password" style="-fx-font-size: 16px;"/>
            <Button text="Sign Up" onAction="#handleSignup" style="-fx-font-size: 16px;"/>

            <TextFlow>
                <Text text="Already have an account? " />
                <Text fx:id="loginLink" text="Login"
                      style="-fx-fill: blue; -fx-underline: true; -fx-cursor: hand;" />
            </TextFlow>
        </VBox>
    </children>
</AnchorPane>
