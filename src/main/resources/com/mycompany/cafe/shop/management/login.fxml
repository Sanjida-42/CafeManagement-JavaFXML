<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.mycompany.cafe.shop.management.LoginController"
            prefWidth="400" prefHeight="300">

    <children>
        <VBox alignment="CENTER" spacing="15" layoutX="50" layoutY="50" prefWidth="300">
            <Label text="Login" style="-fx-font-size: 24px;"/>
            <TextField fx:id="emailField" promptText="Email" style="-fx-font-size: 16px;"/>
            <PasswordField fx:id="passwordField" promptText="Password" style="-fx-font-size: 16px;"/>
            <Button text="Login" onAction="#handleLogin" style="-fx-font-size: 16px;"/>

            <TextFlow>
                <Text text="Don't have an account? " />
                <Text fx:id="signUpLink" text="Sign Up"
                      style="-fx-fill: blue; -fx-underline: true; -fx-cursor: hand;" />
            </TextFlow>
        </VBox>
    </children>
</AnchorPane>
